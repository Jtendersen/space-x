{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            "components/*": [
                "components/*"
            ],
            "pages/*": [
                "pages/*"
            ],
            "assets/*": [
                "assets/*"
            ],
            "contexts/*": [
                "contexts/*"
            ],
            "types/*": [
                "types/*"
            ],
            "hooks/*": [
                "hooks/*"
            ]
        }
    }
}